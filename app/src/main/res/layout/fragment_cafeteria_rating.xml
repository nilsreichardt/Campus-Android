<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".component.ui.cafeteriarating.CreateCafeteriaRatingFragment">

    <include layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/material_small_padding"
        android:background="@color/default_window_background"
        android:orientation="vertical"
        tools:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border_background">

            <Spinner
                android:id="@+id/pickCafeteriaCreateSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_small_padding"
            android:background="@drawable/spinner_border_background">

            <Spinner
                android:id="@+id/pickDishCreateSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </FrameLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_small_padding"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonaddremoveratingtag"
                style="@style/BlueImageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:enabled="true"
                android:layout_marginRight="@dimen/material_default_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:iconTint="@color/white"
                app:cornerRadius="@dimen/material_corner_radius"
                app:icon="@drawable/ic_baseline_photo_camera_24" />


            <TextView
                android:id="@+id/tagItemLabel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:text="Points:"
              android:layout_marginLeft="@dimen/material_default_padding"
                android:layout_marginRight="@dimen/material_default_padding"
                app:autoSizeMaxTextSize="28sp"
                app:autoSizeMinTextSize="10sp"

                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ratingBar1232321"
                app:layout_constraintStart_toEndOf="@+id/buttonaddremoveratingtag"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/ratingBar1232321"
                style="@style/CustomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:numStars="5"
                android:stepSize="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>




            <com.google.android.material.button.MaterialButton
                android:id="@+id/addPhoto"
                style="@style/BlueButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="true"
                android:text="Send Rating"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/material_corner_radius" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="48dp"
                    android:layout_marginTop="@dimen/material_default_padding"
                    android:text="Optional Fields"
                    app:autoSizeMaxTextSize="28sp"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform" />

                <EditText
                    android:id="@+id/editTextTextMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/material_default_padding"
                    android:layout_marginBottom="@dimen/material_default_padding"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Comment"
                    android:inputType="textMultiLine"
                    android:maxLength="256" />



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tagOptionListRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/list_item_rating_tag_large" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>


